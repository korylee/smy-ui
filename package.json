{
  "name": "smy-h5",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "reinstall": "rimraf node_modules",
    "build": "pnpm -r --filter=./packages/* run build",
    "changelog": "smy-h5-cli changelog",
    "lint": "smy-h5-cli lint",
    "release": "node scripts/build.mjs && smy-h5-cli release"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@smy-h5/cli": "workspace:*",
    "@smy-h5/eslint-config": "workspace:*",
    "@types/node": "^16.11.45",
    "execa": "5",
    "lint-staged": "^13.0.3",
    "ora": "5",
    "rimraf": "^3.0.2",
    "stylelint": "^14.11.0",
    "typescript": "~4.7.4",
    "vite": "^3.0.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js,vue,less}": "prettier --write",
    "*.{ts,tsx,js,vue}": "eslint --fix",
    "*.{vue,css,less}": "stylelint --fix"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "packages/smy-h5-cli/lib/**",
      "packages/smy-h5-cli/site/**",
      "packages/smy-h5-ui/lib/**",
      "packages/smy-h5-ui/es/**",
      "packages/smy-h5-ui/umd/**",
      "packages/smy-h5-ui/site/**",
      "packages/smy-h5-ui/public/**"
    ],
    "extends": [
      "@smy-h5"
    ]
  },
  "packageManager": "pnpm@7.8.0"
}