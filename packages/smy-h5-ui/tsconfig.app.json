{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "composite": true,
    "baseUrl": ".",
    "strict": false,
    "downlevelIteration": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "isolatedModules": true,
    "moduleResolution": "node"
  },
  "exclude": ["**/*.spec.ts", "**/*.spec.js", "node_modules"]
}
