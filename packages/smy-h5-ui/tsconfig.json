{
  "extends": "../../tsconfig.json",
  "exclude": ["node_modules", "es", "site"],
  "include": ["src/**/*", "jest-utils/**/*", "global.d.ts", "*/**.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "composite": true,
    "outDir": "./es",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "moduleResolution": "node",
    "paths": {
      "@smy-h5/ui": [
        "./es"
      ]
    }
  },
  "vueCompilerOptions": {
    "target": 2
  }
}
