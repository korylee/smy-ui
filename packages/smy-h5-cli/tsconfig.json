{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "CommonJS",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ]
}
